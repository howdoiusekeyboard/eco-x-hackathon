rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isOwner(userId);
      allow delete: if false; // Prevent deletion
    }

    // Waste batches - farmers can create and read their own
    match /waste_batches/{batchId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() &&
                      (isOwner(resource.data.farmerId) ||
                       request.auth.token.userType == 'industry');
      allow delete: if false; // Prevent deletion for audit trail
    }

    // AI matches - read by authenticated users, write only by Cloud Functions
    match /ai_matches/{matchId} {
      allow read: if isAuthenticated();
      allow create: if false; // Only Cloud Functions can create
      allow update: if isAuthenticated() &&
                      request.auth.token.userType == 'industry'; // Industries can accept/reject
      allow delete: if false;
    }

    // Industries - public read for matching, admin write only
    match /industries/{industryId} {
      allow read: if true; // Public read for AI matching
      allow write: if false; // Only admin can write (via Cloud Functions or Console)
    }

    // IoT readings - read by authenticated users, write by Cloud Functions
    match /iot_readings/{readingId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only Cloud Functions can write
    }
  }
}